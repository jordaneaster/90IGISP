{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd ../frontend && npm ci && npm run build",
  "outputDirectory": "../frontend/.next",
  "installCommand": "cd ../frontend && npm ci",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://your-railway-app-url.up.railway.app/api"
  }
}
