# Completely disable npm cache features
cache=false
prefer-offline=true
offline=false

# Disable non-essential features
fund=false
audit=false
update-notifier=false
package-lock=false

# Avoid filesystem locking issues
force=true
unsafe-perm=true
foreground-scripts=true
ignore-scripts=false
no-optional=true

# Performance settings
loglevel=error
fetch-retries=3
fetch-retry-maxtimeout=30000
maxsockets=10
network-concurrency=8

# Use a temporary directory for cache if needed
cache-dir=/tmp/.npm-cache
