{
  "$schema": "https://railway.app/railway.schema.json",
  "name": "90IGISP-Backend",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd 90IGISP && npm ci"
  },
  "deploy": {
    "startCommand": "cd 90IGISP && node src/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "NODE_ENV": "production",
    "PORT": "3001"
  },
  "healthcheck": {
    "port": 3001,
    "path": "/api/health",
    "interval": 10,
    "timeout": 5
  }
}
